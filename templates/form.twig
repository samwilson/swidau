{%extends "base.twig"%}

{% block content %}

    <form action="{{baseurl}}/{% if item %}{{item.id}}{% else %}create{% endif %}" method="post">
        <p>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{item.title}}" />
        </p>
        <p>
            <label>Upload:</label>
            <input type="file" name="attachment" />
        </p>
        <p>
            <label for="keywords">Keywords:</label>
            <input type="text" id="keywords" name="keywords" value="{{item.keywords}}" />
        </p>
        <p>
            <label>Date:</label>
            <input type="text" name="date" value="{{item.date}}" />
            <label>Granularity:</label>
            <select name="date_granularity">
            {%for g in date_granularities %}
                <option value="{{g.id}}" {% if g.id == item.date_granularity %}selected{% endif %}>
                    {{g.title}}
                </option>
            {% endfor %}
            </select>
        </p>
        <p>
            <label for="description">Description:</label>
            <textarea id="description" name="description">{{item.description}}</textarea>
        </p>
        <p>
            <input type="submit" value="Save" />
            {% if item %}<a href="{{baseurl}}/{{item.id}}">Cancel</a>{% endif %}
        </p>
    </form>

{% endblock %}
