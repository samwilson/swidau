{%extends "base.twig"%}

{% block content %}

<div class="row">
    <form action="{{baseurl}}/remind" method="post" class="col-lg-4">
        <p>
            If you didn't provide an email address when you registered (or later) then you won't be able to reset your password.
            Please contact Support.
        </p>
        <p>
            <label class="control-label" for="name">Name:</label>
            <input type="text" id="name" name="name" class="form-control focus-me" value="{{name}}" required />
        </p>
        <p>
            <input type="submit" value="Remind" name="remind" class="btn btn-success" />
            <input type="submit" value="Return to log in" name="login" class="btn btn-default nav-only" />
        </p>
    </form>
</div>

{% endblock %}
