{% extends "base.twig" %}
{% block content %}
    <h1>{{title}}</h1>

    <p class="alert alert-danger">{{ exception.message }}</p>
    
    {% if mode=='development' %}
    <h2>Trace</h2>
    <table class="full-width table">
        {% for line in exception.trace %}
        <tr>
            <td>{{line.file}}</td>
            <td>{{line.line}}</td>
            <td>{{line.function}}</td>
            <td>{{line.class}}</td>
            <td>{{line.type}}</td>
            <td>{{dump(line.args)}}</td>
        </tr>
        {% endfor %}
    </table>
    {% endif %}

{% endblock %}
